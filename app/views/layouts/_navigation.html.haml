%button.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button")
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
= link_to "Salticidae", root_path, :class => 'brand'
.pull-right
  %ul.nav
    - if logged_in?
      %li= current_user.login
      %li= link_to t(:logout), log_out_path
    - else
      %li= link_to t(:signup), sign_up_path
      %li= link_to t(:login), log_in_path
.nav-collapse.collapse
  %ul.nav
    %li{:class => controller?(:home) ? :active : ""}
      = link_to t(:home), root_path
